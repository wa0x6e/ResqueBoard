<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="ResqueBoard Test Suite">
            <directory>tests/ResqueBoard/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/ResqueBoard/</directory>
        </whitelist>
    </filter>
    <logging>
      <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>